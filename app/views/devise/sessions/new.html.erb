<div class="grid-container user-form">


<h2 class="user-title">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <button type="submit" class="button medium hover-button-yellow" value="Submit">
    Log In
  </button>
<% end %>
<div class="">
  <%= link_to "Forgot Password?", new_user_password_path, class: "button medium hover-button" %>
</div>
<div class="">
  <%= link_to "Sign up", new_user_registration_path, class: "button medium hover-button" %>
</div>
</div>
